---
import BaseLinkUrl from "./BaseLinkUrl.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import MailContactIcon from "./icons/MailContactIcon.astro";
import ElectricBorder from "./ElectricBorder";
---

<ElectricBorder
  className="hidden md:block"
  client:visible
  color="#005ef5"
  speed={0.5}
  chaos={0.5}
  thickness={2}
  style={{ borderRadius: 16 }}
>
  <div>
    <p style={{ margin: "7px 0 0", opacity: 0.8 }}>
      <div
        class="flex flex-col items-center gap-y-7 md:flex-row justify-center md:justify-between py-4 md:py-7 md:px-6 rounded-4xl shadow-lg"
      >
        <div
          class="flex flex-col gap-y-3 items-center md:items-start justify-center"
        >
          <h3
            class="text-2xl sm:text-4xl text-pretty font-semibold text-gray-800 dark:text-white"
          >
            ¿Tienes algún proyecto?
          </h3>
          <p class="text-lg sm:text-xl text-gray-800 dark:text-white">
            ¡Trabajemos Juntos!
          </p>
        </div>

        <nav class="flex items-center gap-x-3 justify-center">
          <BaseLinkUrl href="https://www.linkedin.com/in/santiagocarrillo27/">
            <LinkedIn class="size-4" /> LinkedIn
          </BaseLinkUrl>

          <BaseLinkUrl href="mailto:santiagodev27@gmail.com">
            <MailContactIcon class="size-5" /> Mail
          </BaseLinkUrl>
        </nav>
      </div>
    </p>
  </div>
</ElectricBorder>

<div
  class="md:hidden flex flex-col items-center gap-y-7 justify-center border border-gray-300 transition-all py-4 duration-400 rounded-4xl hover:ring-2 hover:ring-sky-200 shadow-lg hover:scale-103"
>
  <div class="flex flex-col gap-y-3 items-center md:items-start justify-center">
    <h3
      class="text-2xl sm:text-4xl text-pretty font-semibold text-gray-800 dark:text-white"
    >
      ¿Tienes algún proyecto?
    </h3>
    <p class="text-lg sm:text-xl text-gray-800 dark:text-white">
      ¡Trabajemos Juntos!
    </p>
  </div>

  <nav class="flex items-center gap-x-3 justify-center">
    <BaseLinkUrl href="https://www.linkedin.com/in/santiagocarrillo27/">
      <LinkedIn class="size-4" /> LinkedIn
    </BaseLinkUrl>

    <BaseLinkUrl href="mailto:santiagodev27@gmail.com">
      <MailContactIcon class="size-5" /> Mail
    </BaseLinkUrl>
  </nav>
</div>
