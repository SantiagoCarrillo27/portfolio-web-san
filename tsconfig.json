{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  // Configurar rutas más fáciles y no relativas
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*" : ["src/components/*"],
      "@layouts/*" : ["src/layouts/*"],
      "@icons/*" : ["src/components/icons/*"],
      // "@lib/*" : ["src/lib/*"], Para librerías para llamadas a APIS Y COSAS ASÍ.


    }
  }
}
